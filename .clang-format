BasedOnStyle: Microsoft
IndentWidth: 4

NamespaceIndentation: All
SpacesInParentheses: Yes

AccessModifierOffset: -4
ColumnLimit: 120

IncludeBlocks: Regroup
SortIncludes: true

IncludeCategories:
  - Regex: '^\"[^\"]*\"$' 
    Priority: 1
    SortPriority: 1

  - Regex: '^<OstEngine/.*>$' 
    Priority: 2
    SortPriority: 2

  - Regex: '<dxgi\.h|d3d11\.h|d3dcompiler\.h>$' 
    Priority: 4
    SortPriority: 4

  - Regex: '<json\.hpp>$' 
    Priority: 5
    SortPriority: 5

  - Regex: '^<[^\/]*>$' 
    Priority: 3
    SortPriority: 3


PointerAlignment: Left
ReferenceAlignment: Left

BreakTemplateDeclarations: Yes
BreakConstructorInitializers: BeforeComma